{
  "msa3xx": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "is_list": true,
        "type": "typed",
        "typed_key": "type",
        "types": {
          "MSA301": {
            "config_vars": {
              "address": {
                "data_type": "hex_uint8_t",
                "default": "38",
                "key": "Optional"
              },
              "i2c_id": {
                "key": "GeneratedID",
                "type": "use_id",
                "use_id_type": "i2c::I2CBus"
              },
              "resolution": {
                "default": "14",
                "key": "Optional",
                "type": "enum",
                "values": {
                  "10": null,
                  "12": null,
                  "14": null,
                  "8": null
                }
              }
            },
            "extends": [
              "msa3xx._COMMON_SCHEMA"
            ]
          },
          "MSA311": {
            "config_vars": {
              "address": {
                "data_type": "hex_uint8_t",
                "default": "98",
                "key": "Optional"
              },
              "i2c_id": {
                "key": "GeneratedID",
                "type": "use_id",
                "use_id_type": "i2c::I2CBus"
              },
              "resolution": {
                "default": "12",
                "key": "Optional",
                "type": "enum",
                "values": {
                  "12": null
                }
              }
            },
            "extends": [
              "msa3xx._COMMON_SCHEMA"
            ]
          }
        }
      },
      "MSA_SENSOR_SCHEMA": {
        "schema": {
          "config_vars": {
            "msa3xx_id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "msa3xx::MSA3xxComponent"
            }
          }
        },
        "type": "schema"
      },
      "_COMMON_SCHEMA": {
        "schema": {
          "config_vars": {
            "calibration": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "offset_x": {
                    "default": "0",
                    "key": "Optional"
                  },
                  "offset_y": {
                    "default": "0",
                    "key": "Optional"
                  },
                  "offset_z": {
                    "default": "0",
                    "key": "Optional"
                  }
                }
              },
              "type": "schema"
            },
            "id": {
              "id_type": {
                "class": "msa3xx::MSA3xxComponent",
                "parents": [
                  "Component",
                  "PollingComponent",
                  "i2c::I2CDevice"
                ]
              },
              "key": "GeneratedID"
            },
            "on_active": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_double_tap": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_freefall": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_orientation": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_tap": {
              "key": "Optional",
              "type": "trigger"
            },
            "range": {
              "default": "2G",
              "key": "Optional",
              "type": "enum",
              "values": {
                "16G": null,
                "2G": null,
                "4G": null,
                "8G": null
              }
            },
            "transform": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "mirror_x": {
                    "default": "False",
                    "key": "Optional",
                    "type": "boolean"
                  },
                  "mirror_y": {
                    "default": "False",
                    "key": "Optional",
                    "type": "boolean"
                  },
                  "mirror_z": {
                    "default": "False",
                    "key": "Optional",
                    "type": "boolean"
                  },
                  "swap_xy": {
                    "default": "False",
                    "key": "Optional",
                    "type": "boolean"
                  }
                }
              },
              "type": "schema"
            },
            "update_interval": {
              "default": "10s",
              "key": "Optional"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  },
  "msa3xx.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "active": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "device_class": {
                    "default": "vibration"
                  },
                  "icon": {
                    "default": "mdi:vibrate"
                  }
                },
                "extends": [
                  "binary_sensor.BINARY_SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "double_tap": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "device_class": {
                    "default": "vibration"
                  },
                  "icon": {
                    "default": "mdi:gesture-double-tap"
                  }
                },
                "extends": [
                  "binary_sensor.BINARY_SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "tap": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "device_class": {
                    "default": "vibration"
                  },
                  "icon": {
                    "default": "mdi:gesture-tap"
                  }
                },
                "extends": [
                  "binary_sensor.BINARY_SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            }
          },
          "extends": [
            "msa3xx.MSA_SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  },
  "msa3xx.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "acceleration_x": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "msa3xx.sensor.accel_schema"
                ]
              },
              "type": "schema"
            },
            "acceleration_y": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "msa3xx.sensor.accel_schema"
                ]
              },
              "type": "schema"
            },
            "acceleration_z": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "msa3xx.sensor.accel_schema"
                ]
              },
              "type": "schema"
            }
          },
          "extends": [
            "msa3xx.MSA_SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      },
      "accel_schema": {
        "maybe": "name",
        "schema": {
          "config_vars": {
            "accuracy_decimals": {
              "default": "2"
            },
            "icon": {
              "default": "mdi:briefcase-download"
            },
            "state_class": {
              "default": "measurement"
            },
            "unit_of_measurement": {
              "default": "m/s\u00b2"
            }
          },
          "extends": [
            "sensor.SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  },
  "msa3xx.text_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "orientation_xy": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "icon": {
                    "default": "mdi:screen-rotation"
                  }
                },
                "extends": [
                  "text_sensor.TEXT_SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "orientation_z": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "icon": {
                    "default": "mdi:screen-rotation"
                  }
                },
                "extends": [
                  "text_sensor.TEXT_SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            }
          },
          "extends": [
            "msa3xx.MSA_SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  }
}