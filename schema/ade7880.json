{
  "ade7880.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "address": {
              "data_type": "hex_uint8_t",
              "default": "56",
              "key": "Optional"
            },
            "frequency": {
              "default": "50Hz",
              "key": "Optional"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "i2c::I2CBus"
            },
            "id": {
              "id_type": {
                "class": "ade7880::ADE7880",
                "parents": [
                  "Component",
                  "PollingComponent",
                  "i2c::I2CDevice"
                ]
              },
              "key": "GeneratedID"
            },
            "irq0_pin": {
              "internal": true,
              "key": "Optional",
              "modes": [
                "input"
              ],
              "schema": true,
              "type": "pin"
            },
            "irq1_pin": {
              "internal": true,
              "key": "Required",
              "modes": [
                "input"
              ],
              "schema": true,
              "type": "pin"
            },
            "neutral": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "calibration": {
                    "key": "Required",
                    "schema": {
                      "config_vars": {
                        "current_gain": {
                          "key": "Required",
                          "type": "integer"
                        }
                      }
                    },
                    "type": "schema"
                  },
                  "current": {
                    "key": "Required",
                    "maybe": "name",
                    "schema": {
                      "config_vars": {
                        "accuracy_decimals": {
                          "default": "2"
                        },
                        "device_class": {
                          "default": "current"
                        },
                        "state_class": {
                          "default": "measurement"
                        },
                        "unit_of_measurement": {
                          "default": "A"
                        }
                      },
                      "extends": [
                        "sensor.SENSOR_SCHEMA"
                      ]
                    },
                    "type": "schema"
                  },
                  "id": {
                    "id_type": {
                      "class": "ade7880::NeutralChannel",
                      "parents": []
                    },
                    "key": "GeneratedID"
                  },
                  "name": {
                    "key": "Optional",
                    "type": "string"
                  }
                }
              },
              "type": "schema"
            },
            "phase_a": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "ade7880.sensor.POWER_CHANNEL_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "phase_b": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "ade7880.sensor.POWER_CHANNEL_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "phase_c": {
              "key": "Optional",
              "schema": {
                "extends": [
                  "ade7880.sensor.POWER_CHANNEL_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "reset_pin": {
              "internal": true,
              "key": "Optional",
              "modes": [
                "output"
              ],
              "schema": true,
              "type": "pin"
            },
            "update_interval": {
              "default": "60s",
              "key": "Optional"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "type": "schema"
      },
      "POWER_CHANNEL_SCHEMA": {
        "schema": {
          "config_vars": {
            "active_power": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "device_class": {
                    "default": "power"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "W"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "apparent_power": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "device_class": {
                    "default": "apparent_power"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "VA"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "calibration": {
              "key": "Required",
              "schema": {
                "config_vars": {
                  "current_gain": {
                    "key": "Required",
                    "type": "integer"
                  },
                  "phase_angle": {
                    "key": "Required",
                    "type": "integer"
                  },
                  "power_gain": {
                    "key": "Required",
                    "type": "integer"
                  },
                  "voltage_gain": {
                    "key": "Required",
                    "type": "integer"
                  }
                }
              },
              "type": "schema"
            },
            "current": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": "current"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "A"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "forward_active_energy": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": "energy"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  },
                  "unit_of_measurement": {
                    "default": "Wh"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "id": {
              "id_type": {
                "class": "ade7880::PowerChannel",
                "parents": []
              },
              "key": "GeneratedID"
            },
            "name": {
              "key": "Optional",
              "type": "string"
            },
            "power_factor": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "power_factor"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "%"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "reverse_active_energy": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": "energy"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  },
                  "unit_of_measurement": {
                    "default": "VARh"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "voltage": {
              "key": "Optional",
              "maybe": "name",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "device_class": {
                    "default": "voltage"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "V"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            }
          }
        },
        "type": "schema"
      }
    }
  }
}