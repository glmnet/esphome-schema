{
  "uptime.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "docs": "Either:\n  * `seconds` (*default*): A simple counter.\n  \n  * `timestamp`: presents the time ESPHome last booted up. Requires a [Time Component](https://esphome.io/components/time/index.html).\n  \n  \n\n*See also: [Uptime Sensor](https://esphome.io/components/sensor/uptime.html#configuration-variables)*",
        "type": "typed",
        "typed_key": "type",
        "types": {
          "seconds": {
            "config_vars": {
              "accuracy_decimals": {
                "default": "0"
              },
              "device_class": {
                "default": "duration"
              },
              "entity_category": {
                "default": "diagnostic"
              },
              "icon": {
                "default": "mdi:timer-outline"
              },
              "id": {
                "id_type": {
                  "class": "uptime::UptimeSecondsSensor",
                  "parents": [
                    "Component",
                    "EntityBase",
                    "PollingComponent",
                    "sensor::Sensor"
                  ]
                }
              },
              "state_class": {
                "default": "total_increasing"
              },
              "unit_of_measurement": {
                "default": "s"
              },
              "update_interval": {
                "default": "60s",
                "docs": "**, [Time](https://esphome.io/guides/configuration-types.html#config-time)**: The sensor reporting interval. Defaults to `60s`. Valid only with `type: seconds`.\n\n*See also: [Uptime Sensor](https://esphome.io/components/sensor/uptime.html#configuration-variables)*",
                "key": "Optional"
              }
            },
            "extends": [
              "core.COMPONENT_SCHEMA",
              "sensor.SENSOR_SCHEMA"
            ]
          },
          "timestamp": {
            "config_vars": {
              "accuracy_decimals": {
                "default": "0"
              },
              "device_class": {
                "default": "timestamp"
              },
              "entity_category": {
                "default": "diagnostic"
              },
              "icon": {
                "default": "mdi:timer-outline"
              },
              "id": {
                "id_type": {
                  "class": "uptime::UptimeTimestampSensor",
                  "parents": [
                    "Component",
                    "EntityBase",
                    "sensor::Sensor"
                  ]
                }
              },
              "time_id": {
                "key": "GeneratedID",
                "type": "use_id",
                "use_id_type": "time::RealTimeClock"
              }
            },
            "extends": [
              "core.COMPONENT_SCHEMA",
              "sensor.SENSOR_SCHEMA"
            ]
          }
        }
      }
    }
  },
  "uptime.text_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "entity_category": {
              "default": "diagnostic"
            },
            "format": {
              "default": "{}",
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "days": {
                    "default": "d",
                    "key": "Optional",
                    "type": "string"
                  },
                  "expand": {
                    "default": "False",
                    "key": "Optional",
                    "type": "boolean"
                  },
                  "hours": {
                    "default": "h",
                    "key": "Optional",
                    "type": "string"
                  },
                  "minutes": {
                    "default": "m",
                    "key": "Optional",
                    "type": "string"
                  },
                  "seconds": {
                    "default": "s",
                    "key": "Optional",
                    "type": "string"
                  },
                  "separator": {
                    "default": "",
                    "key": "Optional",
                    "type": "string"
                  }
                }
              },
              "type": "schema"
            },
            "icon": {
              "default": "mdi:timer-outline"
            },
            "id": {
              "id_type": {
                "class": "uptime::UptimeTextSensor",
                "parents": [
                  "Component",
                  "EntityBase",
                  "PollingComponent",
                  "text_sensor::TextSensor"
                ]
              }
            },
            "update_interval": {
              "default": "30s",
              "docs": "**, [Time](https://esphome.io/guides/configuration-types.html#config-time)**: The sensor reporting interval. Defaults to `30s`.\n\n*See also: [Uptime Text Sensor](https://esphome.io/components/text_sensor/uptime.html#configuration-variables)*",
              "key": "Optional"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA",
            "text_sensor.TEXT_SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  }
}