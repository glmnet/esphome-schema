{
  "datetime": {
    "components": {
      "template": {
        "docs": "The `template` datetime platform allows you to create a datetime with templated values using [lambdas](https://esphome.io/automations/templates.html#config-lambda).\n\n*See also: [Template Datetime](https://esphome.io/components/datetime/template.html#template-datetime)*"
      }
    },
    "schemas": {
      "_DATETIME_SCHEMA": {
        "schema": {
          "config_vars": {
            "on_value": {
              "key": "Optional",
              "type": "trigger"
            },
            "time_id": {
              "key": "Optional",
              "type": "use_id",
              "use_id_type": "time::RealTimeClock"
            },
            "web_server": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "sorting_group_id": {
                    "key": "Optional",
                    "type": "use_id",
                    "use_id_type": "int"
                  },
                  "sorting_weight": {
                    "key": "Optional"
                  },
                  "web_server_id": {
                    "key": "Optional",
                    "type": "use_id",
                    "use_id_type": "web_server::WebServer"
                  }
                }
              },
              "type": "schema"
            }
          },
          "extends": [
            "core.ENTITY_BASE_SCHEMA",
            "core.MQTT_COMMAND_COMPONENT_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  },
  "datetime.datetime": {
    "action": {
      "set": {
        "schema": {
          "config_vars": {
            "datetime": {
              "key": "Required"
            },
            "id": {
              "key": "Required",
              "type": "use_id",
              "use_id_type": "datetime::DateTimeEntity"
            }
          }
        },
        "type": "schema"
      }
    }
  }
}