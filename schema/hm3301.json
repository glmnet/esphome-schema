                    "key": "Required",
                    "type": "enum",
                    "values": {
                      "AQI": null,
                      "CAQI": null
                    }
                  },
                  "device_class": {
                    "default": "aqi"
                  },
                  "icon": {
                    "default": "mdi:chemical-weapon"
                  },
                  "state_class": {
                    "default": "measurement"
                  },
                  "unit_of_measurement": {
                    "default": "index"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
