{
  "online_image": {
    "action": {
      "release": {
        "maybe": "id",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "online_image::OnlineImage"
            }
          }
        },
        "type": "schema"
      },
      "set_url": {
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "online_image::OnlineImage"
            },
            "url": {
              "key": "Required",
              "templatable": true
            }
          }
        },
        "type": "schema"
      }
    },
    "schemas": {
      "CONFIG_SCHEMA": {
        "is_list": true,
        "schema": {
          "config_vars": {
            "buffer_size": {
              "default": "65536",
              "key": "Optional",
              "type": "integer"
            },
            "format": {
              "key": "Required",
              "type": "enum",
              "values": {
                "BMP": null,
                "JPEG": null,
                "JPG": null,
                "PNG": null
              }
            },
            "http_request_id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "http_request::HttpRequestComponent"
            },
            "id": {
              "docs": "**, [ID](https://esphome.io/guides/configuration-types.html#config-id)**: The image to update the URL for.\n\n*See also: [Online Image Component](https://esphome.io/components/online_image.html#actions)*",
              "id_type": {
                "class": "online_image::OnlineImage",
                "parents": [
                  "Component",
                  "PollingComponent",
                  "image::Image"
                ]
              }
            },
            "on_download_finished": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_error": {
              "key": "Optional",
              "type": "trigger"
            },
            "placeholder": {
              "key": "Optional",
              "type": "use_id",
              "use_id_type": "image::Image"
            },
            "update_interval": {
              "default": "never",
              "key": "Optional"
            },
            "url": {
              "docs": "**, url**: The new URL to download the image from.\n\n*See also: [Online Image Component](https://esphome.io/components/online_image.html#actions)*",
              "key": "Required"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA",
            "image.IMAGE_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  }
}