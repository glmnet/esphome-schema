{
  "pulse_meter": {
    "action": {
      "set_total_pulses": {
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "type": "use_id",
              "use_id_type": "pulse_meter::PulseMeterSensor"
            },
            "value": {
              "data_type": "uint32_t",
              "key": "Required",
              "templatable": true,
              "type": "integer"
            }
          }
        },
        "type": "schema"
      }
    }
  },
  "pulse_meter.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "accuracy_decimals": {
              "default": "2"
            },
            "icon": {
              "default": "mdi:pulse"
            },
            "id": {
              "id_type": {
                "class": "pulse_meter::PulseMeterSensor",
                "parents": [
                  "Component",
                  "EntityBase",
                  "sensor::Sensor"
                ]
              }
            },
            "internal_filter": {
              "default": "13us",
              "key": "Optional"
            },
            "internal_filter_mode": {
              "default": "EDGE",
              "key": "Optional",
              "type": "enum",
              "values": {
                "EDGE": null,
                "PULSE": null
              }
            },
            "pin": {
              "key": "Required"
            },
            "state_class": {
              "default": "measurement"
            },
            "timeout": {
              "default": "5min",
              "key": "Optional"
            },
            "total": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "icon": {
                    "default": "mdi:pulse"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  },
                  "unit_of_measurement": {
                    "default": "pulses"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "unit_of_measurement": {
              "default": "pulses/min"
            }
          },
          "extends": [
            "sensor.SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  }
}