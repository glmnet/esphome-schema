  "micronova.switch": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "micronova_id": {
              "key": "GeneratedID",
              "type": "use_id",
              "use_id_type": "micronova::MicroNova"
            },
            "stove": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "icon": {
                    "default": "mdi:power"
                  },
                  "id": {
                    "id_type": {
                      "class": "micronova::MicroNovaSwitch",
                      "parents": [
                        "Component",
                        "EntityBase",
                        "switch_::Switch"
                      ]
                    },
                    "key": "GeneratedID"
                  },
                  "memory_address": {
                    "default": "33",
                    "key": "Optional"
                  },
                  "memory_data_off": {
                    "default": "6",
                    "key": "Optional"
                  },
                  "memory_data_on": {
                    "default": "1",
                    "key": "Optional"
                  },
                  "memory_location": {
                    "default": "128",
                    "key": "Optional"
                  },
                  "micronova_id": {
                    "key": "GeneratedID",
                    "type": "use_id",
                    "use_id_type": "micronova::MicroNova"
                  },
                  "restore_mode": {
                    "default": "ALWAYS_OFF",
                    "key": "Optional",
                    "type": "enum",
                    "values": {
                      "ALWAYS_OFF": null,
                      "ALWAYS_ON": null,
                      "DISABLED": null,
                      "RESTORE_DEFAULT_OFF": null,
                      "RESTORE_DEFAULT_ON": null,
                      "RESTORE_INVERTED_DEFAULT_OFF": null,
                      "RESTORE_INVERTED_DEFAULT_ON": null
                    }
                  }
                },
                "extends": [
                  "switch._SWITCH_SCHEMA"
