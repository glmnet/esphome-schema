{
  "pulse_counter": {
    "action": {
      "set_total_pulses": {
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "type": "use_id",
              "use_id_type": "pulse_counter::PulseCounterSensor"
            },
            "value": {
              "data_type": "uint32_t",
              "key": "Required",
              "templatable": true,
              "type": "integer"
            }
          }
        },
        "type": "schema"
      }
    }
  },
  "pulse_counter.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "schema": {
          "config_vars": {
            "accuracy_decimals": {
              "default": "2"
            },
            "count_mode": {
              "default": "{'rising_edge': 'INCREMENT', 'falling_edge': 'DISABLE'}",
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "falling_edge": {
                    "key": "Required",
                    "type": "enum",
                    "values": {
                      "DECREMENT": null,
                      "DISABLE": null,
                      "INCREMENT": null
                    }
                  },
                  "rising_edge": {
                    "key": "Required",
                    "type": "enum",
                    "values": {
                      "DECREMENT": null,
                      "DISABLE": null,
                      "INCREMENT": null
                    }
                  }
                }
              },
              "type": "schema"
            },
            "icon": {
              "default": "mdi:pulse"
            },
            "id": {
              "id_type": {
                "class": "pulse_counter::PulseCounterSensor",
                "parents": [
                  "Component",
                  "EntityBase",
                  "PollingComponent",
                  "sensor::Sensor"
                ]
              }
            },
            "internal_filter": {
              "default": "13us",
              "key": "Optional",
              "schema": {
                "extends": [
                  "core.positive_time_period_microseconds"
                ]
              },
              "type": "schema"
            },
            "pin": {
              "key": "Required"
            },
            "state_class": {
              "default": "measurement"
            },
            "total": {
              "key": "Optional",
              "schema": {
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "icon": {
                    "default": "mdi:pulse"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  },
                  "unit_of_measurement": {
                    "default": "pulses"
                  }
                },
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ]
              },
              "type": "schema"
            },
            "unit_of_measurement": {
              "default": "pulses/min"
            },
            "update_interval": {
              "default": "60s",
              "key": "Optional"
            },
            "use_pcnt": {
              "key": "Optional",
              "type": "boolean"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA",
            "sensor.SENSOR_SCHEMA"
          ]
        },
        "type": "schema"
      }
    }
  }
}